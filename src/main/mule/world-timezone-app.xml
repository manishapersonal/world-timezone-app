	<http:request-config name="HTTP_Request_configuration" doc:name="HTTP Request configuration" doc:id="f165ace5-6ccd-48bc-8378-acfa7c9878ba" basePath="/api/timezone" >
		<http:request-connection host="worldtimeapi.org" />
	</http:request-config>
